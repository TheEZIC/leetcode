{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dev",
    "resolveJsonModule": true,
    "target": "ES2021",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
